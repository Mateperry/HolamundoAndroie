<resources>

    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:buttonStyle">@style/CalcButton</item>
    </style>


    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="OperatorButton" parent="CalcButton">
        <item name="android:backgroundTint">@color/teal_700</item>
    </style>


    <style name="EqualsButton" parent="CalcButton">
        <item name="android:backgroundTint">@color/purple_700</item>
    </style>
</resources>
